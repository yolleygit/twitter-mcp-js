{
  "name": "twitter-mcp-js",
  "version": "1.0.1",                 // ← 如要重新发布 npm，请递增版本号
  "description": "Complete Twitter API MCP server with 32 tools for social media integration, analytics, and automation",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "twitter-mcp": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "health": "node src/health-server.js",
    "test": "node test-mcp.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "twitter",
    "x",
    "api",
    "social-media",
    "ai",
    "llm",
    "anthropic",
    "claude",
    "automation",
    "analytics"
  ],
  "author": "yolley <yolley1201@gmail.com>",
  "license": "MIT",

  /* ==== GitHub / npm 元数据 ==== */
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yolleygit/twitter-mcp-js.git"
  },
  "homepage": "https://github.com/yolleygit/twitter-mcp-js#readme",
  "bugs": {
    "url": "https://github.com/yolleygit/twitter-mcp-js/issues"
  },

  /* ==== 运行依赖 ==== */
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0"
  },

  /* ==== Node 版本要求 ==== */
  "engines": {
    "node": ">=18.0.0"
  },

  /* ==== 发布到 npm 时包含的文件 ==== */
  "files": [
    "src/",
    "README.md",
    "LICENSE",
    ".env.example",
    "examples.md",
    "TRAE_SETUP.md",
    "mcp-config.json",
    "trae-mcp-config*.json"
  ]
}